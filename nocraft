  <script>
    // kleines Script für Jahr
    document.getElementById('year').textContent = new Date().getFullYear();

    // Download nur für angemeldete Nutzer
    const downloadBtn = document.getElementById('downloadBtn');
    const downloadUrl = "https://cdn.discordapp.com/attachments/1170735149126791259/1404946578342547628/NoCraftChallenge.jar?ex=689d09f6&is=689bb876&hm=e9d8e0eae5fdaf0cae2a4b33f7be50badf252a3dc59bd04dd08a377de02acddd&";
    const loginError = document.getElementById('loginError');

    if (localStorage.getItem("loggedInUser")) {
      downloadBtn.setAttribute("href", downloadUrl);
      downloadBtn.classList.remove("ghost");
      downloadBtn.classList.add("btn");
    } else {
      downloadBtn.setAttribute("href", "#");
      downloadBtn.addEventListener("click", function(e) {
        e.preventDefault();
        // Glassiger Fehler oben rechts anzeigen
        loginError.style.display = "block";
        loginError.style.animation = "none"; // Reset animation
        void loginError.offsetWidth; // Trigger reflow for restart
        setTimeout(() => {
          loginError.style.animation = "bubble-fade 0.6s cubic-bezier(.4,2,.6,.9) forwards";
          setTimeout(() => {
            loginError.style.display = "none";
            loginError.style.animation = "none";
          }, 600);
        }, 1900);
      });
    }
  </script>
